{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": false,
    "noEmit": true,
    "baseUrl": ".",                         
    "paths": {
  "@bhq/config/*": ["packages/config/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
