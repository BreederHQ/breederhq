{
  "name": "breederhq",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=20.19.0 <21",
    "npm": ">=10.8.0 <11"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:platform": "npm -C ./apps/platform run dev",
    "dev:contacts": "npm -C ./apps/contacts run dev",
    "dev:animals": "npm -C ./apps/animals run dev",
    "dev:breeding": "npm -C ./apps/breeding run dev",
    "dev:offspring": "npm -C ./apps/offspring run dev",
    "dev:all": "npx concurrently \"npm -C ./apps/platform run dev\" \"npm -C ./apps/contacts run dev\" \"npm -C ./apps/animals run dev\" \"npm -C ./apps/breeding run dev\" \"npm -C ./apps/offspring run dev\"",
    "dev": "npm run dev:all",
    "build": "tsup src/index.ts --dts --format esm,cjs --sourcemap --clean",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,css,md}\"",
    "postinstall": "echo \"root postinstall: no builds here\""
  },
  "dependencies": {
    "@fastify/rate-limit": "^10.3.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.545.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^24.3.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.4",
    "fast-glob": "^3.3.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
